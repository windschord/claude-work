{
  "name": "claude-work",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "claude-work": "./dist/src/bin/cli.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "DATABASE_URL=file:./data/build.db npm run build && node -e \"try { require('husky')() } catch (e) {}\"",
    "dev": "ts-node -r tsconfig-paths/register --project tsconfig.server.json server.ts",
    "dev:pm2": "pm2 start ecosystem.config.js --only claude-work-dev",
    "dev:stop": "pm2 stop claude-work-dev",
    "dev:restart": "pm2 restart claude-work-dev",
    "dev:logs": "pm2 logs claude-work-dev",
    "build": "npm run build:next && npm run build:server",
    "build:next": "next build --webpack",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "start": "node dist/server.js",
    "prod:start": "pm2 start ecosystem.config.js --only claude-work",
    "prod:stop": "pm2 stop claude-work",
    "prod:restart": "pm2 restart claude-work",
    "prod:logs": "pm2 logs claude-work",
    "lint": "eslint .",
    "test": "vitest run",
    "test:pm2": "pm2 start ecosystem.config.js --only claude-work-test",
    "test:watch": "vitest",
    "test:watch:pm2": "pm2 start ecosystem.config.js --only claude-work-test-watch",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "integration-test": "ts-node -r tsconfig-paths/register scripts/integration-test.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "textlint": "textlint \"**/*.md\"",
    "textlint:fix": "textlint --fix \"**/*.md\""
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@types/bcryptjs": "^2.4.6",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "iron-session": "^8.0.4",
    "lucide-react": "^0.561.0",
    "next": "^16.1.5",
    "next-themes": "^0.4.6",
    "node-pty": "^1.0.0",
    "pm2": "^6.0.14",
    "react": "^19.0.0",
    "react-diff-viewer-continued": "^4.0.6",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "winston": "^3.19.0",
    "ws": "^8.18.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.5",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "mock-spawn": "^0.2.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "textlint": "14.8.4",
    "textlint-rule-preset-ja-technical-writing": "^10.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "overrides": {
      "glob": "^10.5.0",
      "diff": "^8.0.3",
      "lodash": "^4.17.23"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "vitest related --run --reporter=verbose"
    ],
    "*.{js,jsx,mjs}": [
      "eslint --fix"
    ]
  }
}
