{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": false
  },
  "include": [
    "server.ts",
    "src/bin/**/*",
    "src/lib/**/*",
    "src/services/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
