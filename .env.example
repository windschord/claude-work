# Authentication Token
# Generate a secure random token for production
CLAUDE_WORK_TOKEN=your-secure-token-here

# Database URL (REQUIRED)
# This is required for the application to start
# For development: file:./prisma/data/claudework.db
# For production: postgresql://user:password@host:port/database
DATABASE_URL=file:./prisma/data/claudework.db

# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Allowed Origins for CORS (comma-separated)
# Use "*" for development, specific origins for production
ALLOWED_ORIGINS=*

# Node Environment
NODE_ENV=development

# Session Secret (must be at least 32 characters)
SESSION_SECRET=your-session-secret-at-least-32-characters-long

# Server Port (optional, default: 3000)
PORT=3000

# Allowed Project Directories (comma-separated)
# Restrict which directories can be registered as projects for security
# Leave empty to allow all directories
# Example: /home/user/projects,/opt/projects
ALLOWED_PROJECT_DIRS=

# Claude Code Path (optional)
# Specify the path to the Claude Code executable
# Default: claude (uses system PATH)
# Example: /Users/yourusername/.claude/local/claude
# Or use 'claude' to use the command from your PATH
CLAUDE_CODE_PATH=claude
