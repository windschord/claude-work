# Backend Configuration
# セキュアなランダムトークンを生成してください（例: openssl rand -hex 32）
# E2Eテスト時は test-token-for-e2e を使用
AUTH_TOKEN=your-secret-auth-token-here

# Database Configuration
# SQLiteデータベースのパス（Dockerコンテナ内のパス）
DATABASE_URL=sqlite+aiosqlite:///./data/claudework.db

# CORS Configuration
# フロントエンドのURLを指定（複数の場合はカンマ区切り）
CORS_ORIGINS=http://localhost:3000

# Frontend Configuration
# バックエンドAPIのURL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocketのURL
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Git Repositories Path
# ホストマシン上のGitリポジトリディレクトリのパス
# 例: /home/username/projects または /Users/username/projects
GIT_REPOS_PATH=/home

# Logging Configuration
# ログレベル (debug, info, warning, error)
LOG_LEVEL=info
